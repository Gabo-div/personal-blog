---
import type { CollectionEntry } from "astro:content";
import { Image } from "astro:assets";

interface Props {
  post: CollectionEntry<"posts">;
}

const { post } = Astro.props;
---

<article>
  <a
    href={`/posts/${post.slug}/`}
    class="flex flex-col bg-bunker-950/50 ring-1 ring-bunker-300/20 rounded-lg hover:bg-gradient-to-b hover:from-bunker-950/50 hover:to-red-300/5"
  >
    <Image class="object-cover w-full rounded-t-lg aspect-video" src={post.data.cover} alt={post.data.coverAlt} />

    <div class="flex flex-col px-8 py-6 leading-normal">
      <h5 class="mb-2 text-2xl font-bold tracking-tight text-bunker-50">
        {post.data.title}
      </h5>
      <p class="mb-3 font-normal text-bunker-300">
        {post.data.description}
      </p>

      <ul class="flex flex-wrap gap-1 mt-4">
        {
          post.data.tags.map((tag) => (
            <li>
              <span class="flex items-center justify-center rounded-full py-1 text-xs font-medium px-3 leading-5 text-red-300 bg-red-300/10">
                {tag}
              </span>
            </li>
          ))
        }
      </ul>
    </div>
  </a>
</article>
